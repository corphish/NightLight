<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    android:padding="@dimen/layout_padding"
    card_view:elevation="@dimen/card_elevation"
    android:id="@+id/card_advanced_automation_temps"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding"
        android:layout_margin="@dimen/layout_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding"
            android:layout_margin="@dimen/layout_margin"
            android:textSize="@dimen/text_caption"
            android:textColor="@android:color/white"
            android:text="@string/temperature_settings"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maximum_temperature_title"
            android:layout_margin="@dimen/layout_margin"
            android:paddingStart="@dimen/layout_padding"
            android:paddingEnd="@dimen/layout_padding"
            android:paddingTop="@dimen/layout_padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding"
            android:layout_margin="@dimen/layout_margin"
            android:textSize="@dimen/text_desc"
            android:text="@string/maximum_temperature_desc"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maximum_temperature"
            android:padding="@dimen/layout_padding"
            android:layout_margin="@dimen/layout_margin"
            android:max="1500"
            android:progress="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minimum_temperature_title"
            android:layout_margin="@dimen/layout_margin"
            android:paddingStart="@dimen/layout_padding"
            android:paddingEnd="@dimen/layout_padding"
            android:paddingTop="@dimen/layout_padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding"
            android:layout_margin="@dimen/layout_margin"
            android:textSize="@dimen/text_desc"
            android:text="@string/minimum_temperature_desc"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/minimum_temperature"
            android:padding="@dimen/layout_padding"
            android:layout_margin="@dimen/layout_margin"
            android:max="1500"
            android:progress="0"/>
    </LinearLayout>
</android.support.v7.widget.CardView>